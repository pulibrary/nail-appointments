<div id="<%= dom_id appointment %>">

  <p>
    <strong>Start Time:</strong>
    <%= appointment.availability.start_time.strftime("%Y-%m-%d %H:%M:%S") %>
  </p>

  <p>
    <strong>End Time:</strong>
    <%= appointment.availability.end_time.strftime("%Y-%m-%d %H:%M:%S") %>
  </p>

  <p>
    <strong>Service:</strong>
    <%= appointment.service %>
  </p>

  <p>
    <strong>Comments:</strong>
    <%= appointment.comments %>
  </p>

</div>
