<div class="container mt-4">
  <div class="mb-2">
    <%= link_to user_appointments_path(@user), class: "btn btn-light text-decoration-none d-inline-flex align-items-center mb-4" do %>
      <i class="bi bi-arrow-left me-2"></i> Back to Appointments
    <% end %>
  </div>
  <h1 class="text-center mb-4">Appointment Information</h1>

  <div class="mb-4 p-4 border rounded">
    <%= render @appointment %>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "Edit this appointment", edit_user_appointment_path(@user, @appointment), class: "btn btn-warning me-2" %>
    <%= button_to "Destroy this appointment", [@user, @appointment], method: :delete, data: { confirm: "Are you sure you want to delete this appointment?" }, class: "btn btn-danger" %>
  </div>
</div>
