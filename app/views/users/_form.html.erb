<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger mb-4">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="mb-4">
    <legend class="font-weight-bold">User Information</legend>

    <div class="form-group mb-3">
      <%= form.label :first_name, "First Name", class: "form-label" %>
      <%= form.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :last_name, "Last Name", class: "form-label" %>
      <%= form.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :pronouns, "Pronouns", class: "form-label" %>
      <%= form.text_field :pronouns, class: "form-control", placeholder: "Enter your pronouns (e.g., she/her, he/him, they/them)" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter a valid email address" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :password, "Password", class: "form-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Choose a strong password" %>
    </div>
  </fieldset>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
