<div class="card mb-4 shadow-sm" id="<%= dom_id(user) %>">
  <div class="card-body">
  
    <p class="card-text">
      <strong>First name:</strong>
      <%= user.first_name %>
    </p>

    <p class="card-text">
      <strong>Last name:</strong>
      <%= user.last_name %>
    </p>

    <p class="card-text">
      <strong>Pronouns:</strong>
      <%= user.pronouns %>
    </p>

    <p class="card-text">
      <strong>Email:</strong>
      <%= user.email %>
    </p>

    <p class="card-text">
      <strong>Role:</strong>
      <%= user.role %>
    </p>
  </div>
</div>
