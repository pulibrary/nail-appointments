<div class="container mt-4">
  <div class="mb-2">
    <%= link_to availabilities_path, class: "btn btn-light text-decoration-none d-inline-flex align-items-center mb-4" do %>
      <i class="bi bi-arrow-left me-2"></i> Back to Availabilities
    <% end %>
  </div>
  <div class="mb-4">
    <h1 class="text-center mb-4">Availability Information</h1>
    <div class="mb-4">
      <%= render @availability %>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "Edit this availability", edit_availability_path(@availability), class: "btn btn-warning me-2" %>
    <%= button_to "Destroy this availability", @availability, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this availability?" } %>
  </div>
</div>
